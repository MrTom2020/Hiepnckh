<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nckh">

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".WifiApp"
        android:allowBackup="true"
        android:icon="@drawable/drone"
        android:label="@string/app_name"
        android:roundIcon="@drawable/drone"
        android:supportsRtl="true"
        android:theme="@style/Theme.NCKH">
        <activity android:name=".putnotification"></activity>
        <activity android:name=".BangXepHang" />
        <activity android:name=".tintuc" />
        <activity
            android:name=".danhsachluu"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity android:name=".trangcanhan" />
        <activity android:name=".trangdangky" />
        <activity android:name=".tranghai"></activity>
        <activity android:name=".tranghienthi">

        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".ConnectionReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>